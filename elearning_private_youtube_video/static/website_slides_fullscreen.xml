<templates id="template" xml:space="preserve">
    <t t-name="website.slides.fullscreen.video">
        <div class="player embed-responsive embed-responsive-16by9 embed-responsive-item h-100">
            <iframe sandbox="allow-forms allow-scripts allow-pointer-lock allow-same-origin allow-top-navigation"
                    t-att-id="'youtube-player' + widget.slide.id" 
                    t-att-src="widget.slide.embedUrl" 
                    frameborder="0"
                    enablejsapi="1" 
                    autoplay="1" 
                    allow="autoplay"
                    oncontextmenu="return false;" 
                    onkeydown="return false;"></iframe>
            <div class="overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; z-index: 10;"></div>
            <div class="overlay4"></div>
            <div class="overlay2"></div>
        </div>
    </t>
</templates>
